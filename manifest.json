{
  "name": "BrowserToCalc",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Send selected text or page info to LibreOffice Calc via native messaging.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "contextMenus",
    "nativeMessaging",
    "tabs",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "assets/checkbox_unchecked.png",
    "32": "assets/checkbox_checked.png",
    "48": "assets/checkbox_checked_hover.png",
    "128": "assets/checkbox_unchecked_hover.png"
  },
  "action": {
    "default_title": "Send to watchlist"
  },
  "web_accessible_resources": [
    {
      "resources": ["pycache/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
